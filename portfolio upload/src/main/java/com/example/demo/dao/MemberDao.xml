<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.demo.dao.MemberDao">
	<select id="test1" resultType="com.example.demo.dto.Member">
		SELECT *
		FROM
		member
		WHERE id = 1
	</select>

	<select id="findByLoginId"
		resultType="com.example.demo.dto.Member">
		SELECT *
		FROM member
		WHERE loginId = #{loginId}
	</select>

	<select id="findById"
		resultType="com.example.demo.dto.Member">
		SELECT *
		FROM member
		WHERE id = #{id}
	</select>

	<select id="findByLoginIdAndLoginPasswd"
		resultType="com.example.demo.dto.Member">
		SELECT *
		FROM member
		WHERE loginId = #{loginId}
		AND
		loginPasswd = #{loginPasswd}
	</select>

	<select id="findByNameAndEmail"
		resultType="com.example.demo.dto.Member">
		SELECT *
		FROM member
		WHERE `name` = #{name}
		AND
		email =
		#{email}
	</select>

	<select id="findByLoginIdAndNameAndEmail"
		resultType="com.example.demo.dto.Member">
		SELECT *
		FROM member
		WHERE loginId = #{loginId}
		AND `name` =
		#{name}
		AND email =
		#{email}
	</select>

	<update id="updateLoginPasswd">
		UPDATE `member`
		SET loginPasswd = #{loginPasswd}
		WHERE
		id = #{id}
	</update>

	<update id="update">
		UPDATE `member`
		<set>
			<if test="loginId != null">
				loginId = #{loginId},
			</if>
			<if test="loginPasswd != null">
				loginPasswd = #{loginPasswd},
			</if>
			<if test="name != null">
				name = #{name},
			</if>
			<if test="email != null">
				email = #{email},
			</if>
			<if test="outStatus != null">
				outStatus = #{outStatus},
			</if>
		</set>
		WHERE id = #{id}
	</update>

	<insert id="add" parameterType="com.example.demo.dto.Member"
		useGeneratedKeys="true" keyProperty="id">
		INSERT INTO `member`
		SET regDate =
		#{regDate},
		loginId = #{loginId},
		loginPasswd = #{loginPasswd},
		`name` =
		#{name},
		`email` = #{email},
		outStatus = #{outStatus}
	</insert>
</mapper>
